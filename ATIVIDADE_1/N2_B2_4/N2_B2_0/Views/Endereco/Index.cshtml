@model List<EnderecoViewModel>
@{
    ViewData["Title"] = "Consulta de Endereços";
    Layout = "_Layout";
}


<section class="main-content">

    <a href="/Endereco/Create" class="insert">Cadastrar novo endereço</a>

    <div class="card">
        <ul class="user-profiles-list-basic">
            <table class="table table-responsive table-dark">
                <tr>
                    <th>Ações</th>
                    <th>ID</th>
                    <th>CEP</th>
                    <th>Rua</th>
                    <th>Bairro</th>
                    <th>Número</th>
                    <th>Complemento</th>
                </tr>

                @foreach (EnderecoViewModel a in Model)
                {
                    <tr>
                        <td>
                            <a href="/Endereco/Edit?id=@a.ID" class="btn btn-info">Editar</a>
                            <a href="/Endereco/Delete?id=@a.ID" class="btn btn-danger">Apagar</a>
                        </td>

                        <td>@a.ID.ToString()</td>
                        <td>@a.CEP.ToString()</td>
                        <td>@a.Rua.ToString()</td>
                        <td>@a.Bairro.ToString()</td>
                        <td>@a.Numero.ToString()</td>
                        <td>@a.Complemento.ToString()</td>
                    </tr>
                }

            </table>
        </ul>
        <a href="/locacao/index" class="btn btn-light">Voltar</a>
    </div>
</section>